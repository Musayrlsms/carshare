<div class="col-lg-4 col-xl-3">
<!-- Responsive offcanvas body START -->
<div class="offcanvas-lg offcanvas-end" tabindex="-1" id="offcanvasSidebar" >
	<!-- Offcanvas header -->
	<div class="offcanvas-header justify-content-end pb-2">
		<button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasSidebar" aria-label="Close"></button>
	</div>

	<!-- Offcanvas body -->
	<div class="offcanvas-body p-3 p-lg-0">
		<div class="card bg-light w-100">

			<!-- Edit profile button -->


			<!-- Card body START -->
			<div class="card-body p-3">
				<!-- Avatar and content -->
				<div class="text-center mb-3">
					<!-- Avatar -->
					<% if current_user.avatar.present? %>
							<%= image_tag(current_user.avatar, class: "avatar-img rounded-3") %>
					<% else %>		
						<div class="avatar avatar-lg">
							<img class="avatar-img rounded-circle" src="/assets/images/avatar/default.jpg" alt="avatar">
						</div>
					<% end %>

					<% if current_user.name.present? %>
						<h4><%= current_user.name %></h4>
					<% end %>


				</div>

				<!-- Sidebar menu item START -->
				<ul class="nav nav-pills-primary-soft flex-column">
					<li class="nav-item">
						<%= link_to profiles_path, class: "nav-link active" do %>
							<i class="bi bi-person fa-fw me-2"></i>My Profile
							<% end %>
					</li>
					<li class="nav-item">
						<%=link_to "<i class='bi bi-ticket-perforated fa-fw me-2'></i>My Bookings".html_safe, bookings_profiles_path, class: "nav-link"%>
					</li>
					<li class="nav-item">
						<%= link_to bank_accounts_profiles_path, class: "nav-link" do %>
							<i class="bi bi-wallet fa-fw me-2"></i>Bank Accounts
						<% end %>
					</li>
					<li class="nav-item">
						<%= link_to balance_profiles_path, class: "nav-link" do %>
							<i class="bi bi-wallet fa-fw me-2"></i>Balance & Payout
						<% end %>
					</li>
				</ul>
				<!-- Sidebar menu item END -->
			</div>
			<!-- Card body END -->
		</div>
	</div>
</div>	
<!-- Responsive offcanvas body END -->	
</div>